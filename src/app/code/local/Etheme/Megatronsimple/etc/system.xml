<?xml version="1.0"?>
<config>
    <sections>
        <megatronsimple>
            <tab>megatron</tab>
            <label>Megatron - Flexslider</label>
            <sort_order>4</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <options>
                    <label>Settings</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <animation>
                            <label>Animation</label>
                            <frontend_type>select</frontend_type>
                            <comment>Select your animation type, "fade" or "slide"</comment>
                            <source_model>megatronsimple/fields_source_animation</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </animation>
                        <slideshowspeed>
                            <label>slideshowSpeed</label>
                            <comment>Set the speed of the slideshow cycling, in milliseconds</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </slideshowspeed>
                        <animationspeed>
                            <label>animationSpeed</label>
                            <comment>Set the speed of animations, in milliseconds</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </animationspeed>
                    </fields>
                </options>
            </groups>
        </megatronsimple>
    </sections>
</config>