/* @var $this Mage_Wishlist_Block_Customer_Sidebar */
?>
<?php if ($this->helper('wishlist')->isAllow()) : ?>

    <h3><?php echo $this->getTitle(); ?></h3>

    <?php if ($this->hasWishlistItems()): ?>


        <div class="products-widget jcarousel-skin-previews vertical">
            <ul class="slides">
                <?php foreach ($this->getWishlistItems() as $_item): ?>
                    <?php $_product = $_item->getProduct(); ?>
                    <?php  if(!$_product->isSaleable() && !Mage::getStoreConfig('cataloginventory/options/show_out_of_stock'))continue; ?>
                    <li>
                        <div class="product">
                            <a href="<?php echo $_product->getProductUrl()?>" class="preview-image">
                                <img class="img-responsive product_activ" src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(126, 153);?>" alt="<?php echo $this->stripTags($_product->getName(), null, true) ?>" >
                            </a>
                            <p class="name"><a href="<?php echo $_product->getProductUrl()?>" class="preview-image"><?php echo $this->stripTags($_product->getName(), null, true) ?></a></p>
                            <span class="rating"><?php  echo Mage::helper('megatronconfig')->getStars($_product)?></span>
                            <?php echo $this->getPriceHtml($_product, true)?>
                        </div>
                    </li>
                <?php endforeach ?>
            </ul>
        </div>



        <div class="actions">
            <a class="btn btn-mega" href="<?php echo $this->helper('wishlist')->getListUrl() ?>"><?php echo $this->__('Go to Wishlist') ?></a>
        </div>
    <?php else: ?>
        <p class="empty"><?php echo $this->__('You have no items in your wishlist.') ?></p>
    <?php endif ?>

    <div class="section-divider"></div>




<?php endif ?>
