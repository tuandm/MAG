<?php if (!Mage::getStoreConfig('catalog/frontend/flat_catalog_category')):?>

    <?php $_prev = $this->getPreviousProduct();  ?>
    <?php $_next = $this->getNextProduct();    ?>
    <?php if($_prev || $_next): ?>
        <!-- Small Previews -->
        <section class="container hidden-xs">
            <div class="small-previews">
                <?php if($_prev): ?>
                    <a title="<?php echo $this->escapeHtml($_prev->getName()); ?>" href="<?php echo $_prev->getProductUrl(); ?>" class="prev"></a>
                    <div class="small-preview prev"><img src="<?php echo $this->getPreviousProduct(true) ?>" alt="<?php echo $this->escapeHtml($_prev->getName()); ?>" class="img-responsive"></div>
                <?php endif; ?>

                <?php if($_next): ?>
                    <a title="<?php echo $this->escapeHtml($_next->getName()); ?>" href="<?php echo $_next->getProductUrl(); ?>" class="next"></a>
                    <div class="small-preview next"><img src="<?php echo $this->getNextProduct(true)?>" alt="<?php echo $this->escapeHtml($_next->getName()); ?>" class="img-responsive"></div>
                <?php endif; ?>
            </div>
        </section>
        <!-- //end Small Previews -->
    <?php endif; ?>
<?php endif; ?>