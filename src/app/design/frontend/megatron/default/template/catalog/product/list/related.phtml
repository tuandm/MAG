<?php if($this->getItems()->getSize()): ?>

    <h3><?php echo $this->__('Related Products') ?></h3>

    <?php if((Mage::getStoreConfig('megatronlayout/options/related_products_style_right')=='visible_1' && Mage::getStoreConfig('megatronlayout/options/related_products_pos')=='right') ||
        (Mage::getStoreConfig('megatronlayout/options/related_products_style_bottom')=='big' && Mage::getStoreConfig('megatronlayout/options/related_products_pos')=='bottom')
    ):?>
    <?php
        $related_to_right=false;
        if(Mage::getStoreConfig('megatronlayout/options/related_products_style_right')=='visible_1' && Mage::getStoreConfig('megatronlayout/options/related_products_pos')=='right')
        {
            $related_to_right=true;
        }
    ?>
    <!-- Related Products '1 visible item' style -->
    <div class="row">
        <div class="product-carousel">
            <?php foreach ($this->getItems() as $_item): ?>
                <?php  if(!$_item->isSaleable() && !Mage::getStoreConfig('cataloginventory/options/show_out_of_stock'))continue; ?>
                <?php
                $widthBig=263;
                $heightBig=319;
                $price=$this->getPriceHtml($_item, true);
                ?>
                <?php
                /*
                 * Product Preview HTML  is using in many blocks (category listing, shortcodes).
                 * That is why Product Preview HTML generation collected in one function drawProductPreview()
                 * You can edit this function  in file \app\code\local\Etheme\Megatronconfig\Helper\Data.php
                */
                ?>
                <?php  echo Mage::helper('megatronconfig')->drawProductPreview($_item,    $this,$widthBig,$heightBig,$price,  false, '', true,false,0,'grid',$related_to_right)?>


            <?php endforeach ?>
        </div>
    </div>

    <?php elseif(Mage::getStoreConfig('megatronlayout/options/related_products_style_right')=='visible_3' && Mage::getStoreConfig('megatronlayout/options/related_products_pos')=='right'):?>
    <!-- Related Products '3 visible item' style -->
    <div class="products-widget jcarousel-skin-previews vertical">
        <ul class="slides">

            <?php foreach ($this->getItems() as $_item): ?>
                <?php  if(!$_item->isSaleable() && !Mage::getStoreConfig('cataloginventory/options/show_out_of_stock'))continue; ?>
                <li>
                    <div class="product">
                        <a href="<?php echo $_item->getProductUrl()?>" class="preview-image">
                            <img class="img-responsive product_activ" src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(126, 153);?>" alt="<?php echo $this->stripTags($_item->getName(), null, true) ?>" >
                        </a>
                        <p class="name"><a href="<?php echo $_item->getProductUrl()?>" class="preview-image"><?php echo $this->stripTags($_item->getName(), null, true) ?></a></p>
                        <span class="rating"><?php  echo Mage::helper('megatronconfig')->getStars($_item)?></span>
                        <?php echo $this->getPriceHtml($_item, true)?>
                    </div>
                </li>
            <?php endforeach ?>
        </ul>
    </div>
    <?php else:?>
        <div class="products-list-small add_after_quick_view_section">
            <ul class="slides">
            <?php
            $quick_view=Mage::getStoreConfig('megatronconfig/options/quick_view');
            $quick_view_style=Mage::getStoreConfig('megatronconfig/options/quick_view_style');
            ?>
            <?php foreach ($this->getItems() as $_item): ?>
                <?php  if(!$_item->isSaleable() && !Mage::getStoreConfig('cataloginventory/options/show_out_of_stock'))continue; ?>
                <li>
                    <div class="product-preview">
                        <div class="preview animate scale">
                            <a href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(126,153) ?>"  alt="<?php echo $this->escapeHtml($_item->getName()) ?>" /></a>
                            <?php if(Mage::getStoreConfig('megatronconfig/options/quick_view')):?>
                                <a
                                    <?php
                                    if($quick_view && $quick_view_style=='in')
                                    {
                                        echo 'href="'.$this->getUrl('ajax/index/options', array('product_id' => $_item->getId())).'"  class="quick-view hidden-xs"';
                                    }elseif($quick_view && $quick_view_style=='out')
                                    {
                                        echo '<a href="'.$this->getUrl('ajax/index/popup', array('product_id' => $_item->getId())).'"  class="quick-view hidden-xs fancybox fancybox.ajax"';
                                    }
                                    ?>
                                    >
                                    <span class="icon-zoom-in-2"></span> <?php echo $this->__('View') ?>
                                </a>
                            <?php endif;?>
                        </div>
                    </div>
                </li>
            <?php endforeach ?>
            </ul>
        </div>

        <div class="product-view-ajax-container"><div class="product-view-ajax"><div class="ajax-loader progress progress-striped active"><div class="progress-bar progress-bar-danger" role="progressbar"></div> </div><div class="layar"></div><div class="product-view-container"> </div></div></div>
    <?php endif;?>

<?php endif; ?>