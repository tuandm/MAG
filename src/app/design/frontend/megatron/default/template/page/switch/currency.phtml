 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>
<?php if($this->getCurrencyCount()>1): ?>
    <?php
    $header=Mage::getStoreConfig('megatronlayout/options/header');
    ?>
<div class="btn-group compact-hidden<?php if($header=='advanced'):?> btn-hidden<?php endif;?>"> <a href="#"  class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown">
        <?php
        $header=Mage::getStoreConfig('megatronlayout/options/header');
        ?>
        <?php if($header=='default' || $header=='advanced'):?>
            <span class="icon icon-credit "></span>
            <?php echo Mage::app()->getLocale()->currency(Mage::app()->getStore()->getCurrentCurrencyCode())->getName() ?>
        <?php else:?>
            <?php echo Mage::app()->getLocale()->currency(Mage::app()->getStore()->getCurrentCurrencyCode())->getSymbol() ?>
        <?php endif;?>
        <span class="caret"></span> </a>
                <ul class="dropdown-menu" role="menu">
                  <?php foreach ($this->getCurrencies() as $_code => $_name): ?>
        <li> <a href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>">(<?php echo Mage::app()->getLocale()->currency($_code)->getSymbol() ?>)&nbsp;<?php echo $_name ?></a> </li>
        <?php endforeach; ?>
                </ul>
              </div>

<?php endif; ?>
