                                    <?php endif; ?>

                                    <?php if(strtolower($_code)=='grid'):?>
                                        <a class="active view-grid"><span class="icon-th"></span></a>
                                    <?php endif; ?>
                                <?php else: ?>
                                    <?php if(strtolower($_code)=='list'):?>
                                        <a href="<?php echo $this->getModeUrl($_code) ?>" class="view-list"><span class="icon-th-list"></span></a>
                                    <?php endif; ?>

                                    <?php if(strtolower($_code)=='grid'):?>
                                        <a href="<?php echo $this->getModeUrl($_code) ?>" class="view-grid"><span class="icon-th"></span></a>
