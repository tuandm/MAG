/**
 * Shoping cart sidebar
 *
 * @see Mage_Checkout_Block_Cart_Sidebar
 */

?>
<?php if ($this->getIsNeedToDisplaySideBar() && !Mage::getStoreConfig('megatronconfig/options/catalog_mode')):?>
<?php
     $_cartQty = $this->getSummaryCount();
     if(empty($_cartQty))$_cartQty=0;
     $hide_cart_in_fixed=Mage::getStoreConfig('megatronlayout/options/header_fixed_cart')?'compact-hidden':'';
?>


    <div class="btn-group <?php echo $hide_cart_in_fixed;?>" id="shopping_cart">
        <a href="#"  class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown">
            <?php
            $header=Mage::getStoreConfig('megatronlayout/options/header');
            ?>
            <?php if($header=='default' || $header=='advanced'):?>
                <span class="compact-hidden text-shopping-cart">
                    <?php echo $this->__('Cart') ?> -
                    <strong><?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()) ?></strong>
                </span>
            <?php endif;?>

            <span class="icon-xcart-animate">
                <span class="box"><?php echo $_cartQty ?></span>
                <span class="handle"></span>
            </span>
        </a>
        <div class="dropdown-menu pull-right shoppingcart-box" role="menu">
            <?php $_items = $this->getRecentItems() ?>
            <?php if(count($_items)): ?>
            <?php echo $this->__('Recently added item(s)') ?>
            <ul class="list">
                <?php foreach($_items as $_item): ?>
                    <?php echo $this->getItemHtml($_item) ?>
                <?php endforeach; ?>

            </ul>
            <div class="total">
                <?php echo $this->__('Total') ?>:
                <?php if ($_cartQty==1): ?>
                    <?php echo $this->__('1 item') ?>
                <?php else: ?>
                    <?php if(empty($_cartQty))$_cartQty=0?>
                    <?php echo $this->__('%s items', $_cartQty) ?>
                <?php endif ?>
                <?php if ($this->canApplyMsrp()): ?>
                <?php else: ?>
                    - <?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()) ?>
                <?php endif; ?>
            </div>
            <a href="<?php echo $this->getCheckoutUrl() ?>" class="btn btn-mega"><?php echo $this->__('Proceed to Checkout') ?></a>
            <div class="view-link"><a href="<?php echo Mage::helper('checkout/cart')->getCartUrl(); ?>"><?php echo $this->__('View shopping cart') ?> </a></div>
            <?php else: ?>
                <span class="empty"><?php echo $this->__('You have no items in your shopping cart.') ?></span>
            <?php endif ?>
        </div>
    </div>

<?php endif;?>






