<?xml version="1.0"?>
<config>
    <modules>
        <VS_Ajax>
            <version>0.1.0</version>
        </VS_Ajax>
    </modules>
    <frontend>
        <routers>
            <ajax>
                <use>standard</use>
                <args>
                    <module>VS_Ajax</module>
                    <frontName>ajax</frontName>
                </args>
            </ajax>
            <checkout>
                <args>
                    <modules></modules>
                </args>
            </checkout>
        </routers>
        <layout>
            <updates>
                <ajax>
                    <file>ajax.xml</file>
                </ajax>
            </updates>
        </layout>
    </frontend>

    <global>
        <models>
            <ajax>
                <class>VS_Ajax_Model</class>
                <resourceModel>ajax_mysql4</resourceModel>
            </ajax>
            <ajax_mysql4>
                <class>VS_Ajax_Model_Mysql4</class>
                <entities>
                    <ajax>
                        <table>ajax</table>
                    </ajax>
                </entities>
            </ajax_mysql4>
        </models>
        <resources>
            <ajax_setup>
                <setup>
                    <module>VS_Ajax</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ajax_setup>
            <ajax_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </ajax_write>
            <ajax_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </ajax_read>
        </resources>
        <blocks>
        	<!--<checkout>
        		<rewrite>
        			<cart_sidebar>VS_Ajax_Block_Cart_Sidebar</cart_sidebar>
        		</rewrite>
        	</checkout>-->
            <ajax>
                <class>VS_Ajax_Block</class>
            </ajax>
            <!--<checkout>
                <rewrite>
                    <cart_item_renderer>VS_Ajax_Block_Checkout_Cart_Item_Renderer</cart_item_renderer>
                </rewrite>
            </checkout>-->
        </blocks>
        <helpers>
            <ajax>
                <class>VS_Ajax_Helper</class>
            </ajax>
        </helpers>
        <events>
            <controller_action_postdispatch>
                <observers>
                    <vs_ajax_observer>
                        <type>singleton</type>
                        <class>VS_Ajax_Model_Observer</class>
                        <method>getListproduct</method>
                    </vs_ajax_observer>
                </observers>
            </controller_action_postdispatch>
        </events>
    </global>
</config>