<?xml version="1.0"?>
<layout version="0.1.0">
    <!--produt detail page-->
    <default>
        <reference name="head">
            <action method="addJs"><script>etheme/megatron/VS/ajaxwishlist.js</script></action>
            <action method="addJs"><script>etheme/megatron/VS/addtocart.js</script></action>
        </reference>
    </default>




    <!-- optins page in lightbox-->
    <ajax_index_options>
        <reference name="root">
            <action method="setTemplate">
                <template>page/quick_view.phtml</template>
            </action>
        </reference>

        <reference name="content">

            <block type="catalog/product_view" name="product.info" template="ajax/catalog/product/options.phtml">

                <block type="catalog/product_view_media" name="product.info.media" as="media" template="catalog/product/view/media_quick_view.phtml"/>


                <action method="unsetCallChild">
                    <child>container1</child>
                    <call>ifEquals</call>
                    <if>0</if>
                    <key>alias_in_layout</key>
                    <key>options_container</key>
                </action>
                <action method="unsetCallChild">
                    <child>container2</child>
                    <call>ifEquals</call>
                    <if>0</if>
                    <key>alias_in_layout</key>
                    <key>options_container</key>
                </action>
            </block>
        </reference>
    </ajax_index_options>

    <ajax_index_popup>
        <reference name="root">
            <action method="setTemplate">
                <template>page/quick_view.phtml</template>
            </action>
        </reference>

        <reference name="content">

            <block type="catalog/product_view" name="product.info" template="ajax/catalog/product/popup.phtml">

                <block type="catalog/product_view_media" name="product.info.media" as="media" template="catalog/product/view/media_quick_view.phtml"/>


                <action method="unsetCallChild">
                    <child>container1</child>
                    <call>ifEquals</call>
                    <if>0</if>
                    <key>alias_in_layout</key>
                    <key>options_container</key>
                </action>
                <action method="unsetCallChild">
                    <child>container2</child>
                    <call>ifEquals</call>
                    <if>0</if>
                    <key>alias_in_layout</key>
                    <key>options_container</key>
                </action>
            </block>
        </reference>
    </ajax_index_popup>
</layout>